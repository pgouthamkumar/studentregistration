<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd" version="2.0">
<application>
	<locale-config>
	<default-locale>hi_IN</default-locale>
	</locale-config>
	<resource-bundle>
	<base-name>com.crimsonlogic.training.jsf.bundle.Label</base-name>
	<var>label</var>
	</resource-bundle>
</application>  
<navigation-rule>
	<from-view-id>/navigationCheck.xhtml</from-view-id>
	<navigation-case>
		<from-outcome>java.lang.NullPointerException</from-outcome>
		<to-view-id>/500.xhtml</to-view-id>
	</navigation-case>
</navigation-rule>
</faces-config>